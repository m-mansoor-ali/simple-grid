{
  "entrypoint": "demo/index.html",
  "sources": [
    "index.html",
    "demo/*",
    "simple-grid.html",
    "bower.json"
  ],
  "extraDependencies": [
    "bower_components/webcomponentsjs/webcomponents-lite.js",
    "bower_components/polymer/polymer-element.html",
    "bower_components/iron-demo-helpers/demo-pages-shared-styles.html",
    "bower_components/iron-demo-helpers/demo-snippet.html"
  ],
  "builds": [
    {
      "preset": "es5-bundled",
      "js": {
        "minify": false,
        "compile": true
      },
      "css": {
        "minify": false
      },
      "html": {
        "minify": false
      },
      "bundle": true,
      "addServiceWorker": false,
      "addPushManifest": false
    }
  ],
  "lint": {
    "rules": [
      "polymer-2"
    ]
  }
}